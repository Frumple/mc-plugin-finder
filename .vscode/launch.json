  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'collector'",
      "cargo": {
        "args": [
          "build",
          "--package=collector"
        ],
        "filter": {
          "name": "collector",
          "kind": "bin"
        }
      },
      "args": ["populate", "spigot", "authors"],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'web'",
      "cargo": {
        "args": [
          "build",
          "--bin=web",
          "--package=mc-plugin-finder"
        ],
        "filter": {
          "name": "web",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'mc-plugin-finder'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--bin=mc-plugin-finder",
          "--package=mc-plugin-finder"
        ],
        "filter": {
          "name": "mc-plugin-finder",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}